.contents.row
  .article__contents.u-mt-large
    - if user_signed_in? && current_user.id == article.user.id
      .more
        %ul.more__list
          %li
            = link_to '', "/articles/#{article.id}/edit", method: :get, class: "fa fa-pencil", id: "i"
          %li
            = link_to '', "/articles/#{article.id}", method: :delete, class: "fa fa-trash", id: "i"
    .contents__image
      = image_tag article.image, class: "event__image"
    .contents__detail
      - if article.user.advertiser?
        = image_tag 'sale.png', class: "advertiser-mark"
        .contents__title #{article.title}
      - else
        .contents__title #{article.title}
      .contents__user-name
        = "投稿者: #{article.user.nickname}"
    .contents__infomaiton
      .contents__more
        = link_to "もっと詳しく見る", "/articles/#{article.id}"











