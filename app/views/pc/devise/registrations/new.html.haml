.contents.row
  %h2 Sign up
  = form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:multipart => true}) do |f|
    = devise_error_messages!
    .field
      = f.label :ニックネーム
      %em.label--emphasis [必須]
      %br/
      %i (6文字まで)
      = f.text_field :nickname, autofocus: true, maxlength: "6"
    .field
      = f.label :eメール
      %em.label--emphasis ([必須])
      %br/
      = f.email_field :email
    .field
      = f.label :パスワード
      %em.label--emphasis ([必須])
      %br/
      %i (6文字以上)
      - if @validatable
        %em
          (#{@minimum_password_length} characters minimum)
      %br/
      = f.password_field :password, autocomplete: "off"
    .field
      = f.label :パスワード確認用
      %em.label--emphasis ([必須])
      %br/
      = f.password_field :password_confirmation, autocomplete: "off"
    .field
      = f.label :アイコン画像
      %em.label--emphasis ([必須])
      = f.file_field :avatar
      = f.hidden_field :avatar_cache
    .field
      = f.label :一言コメント
      %em ([任意])
      %br/
      %i (自己紹介やお店の紹介をしてください。)
      = f.text_area :comment, placeholder: "例)自己紹介やお店の紹介など", size: "30x20"
    .field
      = f.label :あなたは広告主ですか？
      %em ([任意])
      %br/
      = f.check_box :advertiser
      %br/
      %i (広告主になると、お店の情報を配信することができます。)
    .actions
      = f.submit "Sign up"
